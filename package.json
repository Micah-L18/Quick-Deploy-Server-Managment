{
  "name": "quick-deploy-server-manager",
  "version": "0.2.0",
  "description": "Multi-server SSH connection management application",
  "repository": {
    "type": "git",
    "url": "https://github.com/micah-l18/Quick-Deploy-Server-Managment.git"
  },
  "scripts": {
    "start": "npm run build && concurrently \"npm run start:backend\" \"npm run start:client\"",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:client\"",
    "start:backend": "cd Backend && node server.js",
    "start:client": "cd Client && npx serve -s build -l 3000",
    "dev:backend": "cd Backend && npx nodemon server.js",
    "dev:client": "cd Client && PORT=3000 npm start",
    "install:all": "npm install && cd Backend && npm install && cd ../Client && npm install",
    "build": "bash scripts/build.sh",
    "pm2:start": "npm run install:all && npm run build && pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs"
  },
  "keywords": [
    "ssh",
    "server",
    "management"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "pm2": "^6.0.14"
  }
}